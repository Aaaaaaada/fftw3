#.rst:
# FindFFTW3@PREC_SUFFIX@
# ---------
#
# Find fftw3@PREC_SUFFIX@
#
# Find the native FFTW3@PREC_SUFFIX@ headers and libraries
#
# ::
#
#   FFTW3@PREC_SUFFIX@_INCLUDE_DIRS - where to find fftw3@PREC_SUFFIX@.h, etc.
#   FFTW3@PREC_SUFFIX@_LIBRARIES    - List of libraries when using fftw3@PREC_SUFFIX@.
#   FFTW3@PREC_SUFFIX@_FOUND        - True if fftw3@PREC_SUFFIX@ found.
find_package(PkgConfig QUIET)

pkg_check_modules(PC_FFTW3@PREC_SUFFIX@ QUIET fftw3@PREC_SUFFIX@)
find_path(FFTW3@PREC_SUFFIX@_INCLUDE_DIR fftw3@PREC_SUFFIX@.h HINTS ${PC_FFTW3@PREC_SUFFIX@_INCLUDE_DIRS} @libdir@)

find_library(FFTW3@PREC_SUFFIX@_LIBRARY NAMES fftw3@PREC_SUFFIX@ HINTS ${PC_FFTW3@PREC_SUFFIX@_LIBRARY_DIRS} @includedir@)

set(FFTW3@PREC_SUFFIX@_LIBRARIES ${FFTW3@PREC_SUFFIX@_LIBRARY} )
set(FFTW3@PREC_SUFFIX@_INCLUDE_DIRS ${FFTW3@PREC_SUFFIX@_INCLUDE_DIR} )

include(FindPackageHandleStandardArgs)
# handle the QUIETLY and REQUIRED arguments and set FFTW3@PREC_SUFFIX@_FOUND to TRUE
# if all listed variables are TRUE

find_package_handle_standard_args(FFTW3@PREC_SUFFIX@ DEFAULT_MSG FFTW3@PREC_SUFFIX@_LIBRARY FFTW3@PREC_SUFFIX@_INCLUDE_DIR )

mark_as_advanced(FFTW3@PREC_SUFFIX@_INCLUDE_DIR FFTW3@PREC_SUFFIX@_LIBRARY )
